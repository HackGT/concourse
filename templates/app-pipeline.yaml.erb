resource_types:
<% if app.include? 'run' %>
- name: k8s-resource
  type: docker-image
  source:
    repository: frodenas/k8s-resource
<% end %>

resources:
<% if app.include? 'git' %>
- name: <%= app['name'] %>
  type: git
  source:
    uri: <%= app['git'] %>
    branch: <%= app['branch'].nil? ? 'master' : app['branch'] %>

- name: <%= app['name'] %>-image
  type: docker-image
  source:
    repository: <%= git_to_shortname(app['git']).downcase %>
    email: "{{dockerhub_email}}"
    username: "{{dockerhub_user}}"
    password: "{{dockerhub_pass}}"
<% end %>

jobs:
<% if app.include? 'git' %>
- name: build-<%= app['name'] %>-image
  plan:
  - get: <%= app['name'] %>
    trigger: true
  - put: <%= app['name'] %>-image
    params:
      build: <%= app['name'] %>
    get_params:
      skip_download: true
<% end %>
