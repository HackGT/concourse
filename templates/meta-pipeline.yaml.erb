<% git_apps = biodome['apps'].select { |a| a.include? 'git' } %>

resource_types:
  - name: concourse-pipeline
    type: docker-image
    source:
      repository: robdimsdale/concourse-pipeline-resource
      tag: v0.7.0

resources:
  - name: main-pipelines
    type: concourse-pipeline
    source:
      target: http://35.185.24.163:8080/
      teams:
        - name: main
          username: "{{team_main_user}}"
          password: "{{team_main_pass}}"

  - name: biodomes
    type: git
    source:
      uri: https://github.com/hackgt/biodomes.git
      branch: master

  - name: concourse-config
    type: git
    source:
      uri: https://github.com/hackgt/concourse.git
      branch: master

  <% for app in git_apps %>
  - name: <%= app['name'] %>
    type: git
    source:
      uri: <%= app['git'] %>
      branch: <%= app['branch'] || DEFAULT_BRANCH %>
  <% end %>

groups:
- name: <%= biodome[:biodome] %>
  jobs:
  - build-<%= biodome[:biodome] %>-pipeline

jobs:
  - name: build-<%= biodome[:biodome] %>-pipeline
    public: true
    plan:
      - aggregate:
        - get: biodomes
          trigger: true
        - get: concourse-config
          trigger: true
        <% for app in git_apps %>
        - get: <%= app['name'] %>
          trigger: true
        <% end %>
      - task: generate-<%= biodome[:biodome] %>-pipeline
        config:
          platform: linux
          image_resource:
            type: docker-image
            source:
              repository: ruby
              tag: 2.4.0
          inputs:
            <% for app in git_apps %>
            - name: <%= app['name'] %>
            <% end %>
            - name: biodomes
            - name: concourse-config
              path: ci
          outputs:
            - name: built-pipelines
          params:
            <% for secret in biodome[:secrets] %>
            secret_<%= secret %>: "{{<%= secret %>}}"
            <% end %>
            PIPEDREAM_TEAM: main
            PIPEDREAM_OUT_DIR: built-pipelines
            PIPEDREAM_OUT_FILE: pipelines.yaml
            PIPEDREAM_BIODOMES_FILE: biodomes/<%= biodome[:biodome] %>.yaml
          run:
            path: ruby
            args:
              - ci/tasks/generate-pipelines.rb
      - put: main-pipelines
        params:
          pipelines_file: built-pipelines/pipelines.yaml
